        {
            @if (!string.IsNullOrEmpty(item.nombre_casa))
            {
                <div >
                    <a>Nombre de Casa: @item.nombre_casa</a>
                    <br>
                    <a>Precio: @item.precio</a>
                </div>
            }
        }
    </div>
     <hr>

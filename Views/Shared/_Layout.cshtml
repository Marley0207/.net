<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Test1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Test1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a style="margin-right:20px;">EcoMotor Bienes Raíces y Rodados</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                            <a class="nav-link text-dark" asp-action="Index" asp-controller="casas">Men&uacute;</a>
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Venta_Carros">Carros</a>
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Venta_Motos">Motos</a>
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Usuarios">Usuarios</a>
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Duenios">Duenios</a>
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Casas_Duenios">Casas con Dueño</a>
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Carros_Duenios">Carros con Dueño</a>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Test1 - <a asp-area="" class="btn btn-primary" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
